                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView42" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="11. Jeśli zwierzę będzie mieszkać w domu, to będzie mógł się poruszać po całym domu czy tylko w wyznaczonym obszarze? Prosimy wpisać gdzie będzie przebywać zwierzę."
                    android:textAlignment="textStart"
                    android:textColor="#454444"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/adoptQuestion10" />

