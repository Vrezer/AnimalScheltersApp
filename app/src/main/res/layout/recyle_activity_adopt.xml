<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/recycleAdoptDate"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:textSize="18sp"
            android:text="DATA" />
        <TextView
            android:id="@+id/recycleAdoptIdAdopt"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:layout_marginStart="40dp"
            android:layout_below="@+id/recycleAdoptDate"
            android:textSize="18sp"
            android:text="TUTAJ BEDZIE ID ZGLOSZENIA" />

        <TextView
            android:id="@+id/nameAdoptAdmin"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/recycleAdoptIdAdopt"
            android:layout_height="wrap_content"
            android:text="Tutaj bedzie imie" />

        <TextView
            android:id="@+id/surnameAdoptAdmin"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/recycleAdoptIdAdopt"
            android:layout_toEndOf="@+id/nameAdoptAdmin"
            android:layout_height="wrap_content"
            android:text="Tutaj bedzie nazwisko" />

        <TextView
            android:id="@+id/TextView1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#454444"
            android:textSize="18sp"
            android:layout_below="@+id/nameAdoptAdmin"
            android:layout_marginStart="40dp"
            android:text="Zwierze wabi siÄ™: "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_below="@+id/nameAdoptAdmin"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/TextView1000"
            android:id="@+id/animalNameAdoptAdmin"
            android:text="Imie "/>



    </RelativeLayout>
</androidx.cardview.widget.CardView>